<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RPM_LABA7.CarouselItem"
             Width="500"
             Height="250">
    <Border Background="#2255AA" 
            CornerRadius="8" 
            Padding="12"
            Width="200"
            Height="150">
        <StackPanel Spacing="8">
            <TextBlock Text="Your Note" 
                      Foreground="White"
                      FontSize="14"
                      FontWeight="Bold"/>
            <TextBox Width="176"
                     Height="90"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Watermark="Enter your text here..."/>
        </StackPanel>
    </Border>
</UserControl> 